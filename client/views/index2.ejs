<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.28/angular.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.28/angular-route.js"></script>
      <!-- <script src="angular-ui-routerjs"></script> -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script type="text/javascript" src="/javascripts/app.js"></script>
  <script type="text/javascript" src="/javascripts/controllers.js"></script>
  <script type="text/javascript" src="/javascripts/factories.js"></script>
<!-- link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css"> -->
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script type="text/javascript">
  $(document).ready(function(){
    for(i=0; i<16; i++){
      $('#contact_collage').append('<div class="image"></div>');
    } 
  });
    
  </script> 
</head>
  <body ng-app="dashboard">
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <div id="container">
      <div id="content">
      <!-- <div ui-view=""> -->
        <div id="contact_collage">
        </div><!-- Comment to remove space
     --><div id="contact_info">
          <h2>Contact Info</h2>
          <h3>Katrina Sanford</h3>
          <h4>Info: ...</h4>
          <p>Phone: 70251806942</p>
          <p>Address: 4600 Davis Ave S Apt B103</p>
          <h4>Social Media Links:</p>
          <h4>Groups:</h4>
        </div><!-- Comment to remove space
     --><div id="action_plans">
          <h3>Action Plan Tasks (The Que)</h3>
          <input type="checkbox">Katrina's Birthday
        </div>
        <div id="notes_docs">
          <h3>Upcomming Reminders</h3>
          <input type="checkbox">Patrick's Birthday <span class="alert">4 days</span>
        </div>
      <!-- </div> -->
      </div><!-- Comment to remove space
   --><div id="contacts" ng-controller="Contacts">
        <h1>Contacts</h1>
        <h4>Display</h4>
        <ul>
          <li><a href="#">All</a></li>
          <li><a href="#">Favorites</a></li>
          <li><a href="#">Groups</a></li>
        </ul>
        <div class="contact_list" ng-repeat="contact in contacts">
          <a ng-href="#contact"><p ng-bind="contact.name"></p></a>
        </div>
        <h3>Add New Contact</h3>
        <form ng-submit="addContact()">
          <input type="text" ng-model="new_contact.name" placeholder="Contact Name">
          <input type="submit" value="Add">
        </form>
      </div>
    </div>
  </body>
</html>
